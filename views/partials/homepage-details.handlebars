

  <div class="row">
    <div class="col s12">
      <a href="/post/{{id}}">
        <div class="card z-depth-3">
          <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p>{{content}}</p>
          </div>
          <div class="card-action">
            <p class="left">posted by: {{user.username}} at {{format_dateTime date_created}}</p>
            <p class="right">Comments</p>
          </div>
        </div>
      </a>
    </div>
  </div>
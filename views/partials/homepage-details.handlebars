<div class="row">
  <div class="col s12">
    <div class="card z-depth-3">
      <a href="/post/{{id}}">
        <div class="card-content">
          <span class="card-title">{{title}}</span>
          <p>{{truncate_content content}}</p>
        </div>
        <div class="card-action">
          <p class="left">posted by:
            {{user.username}}
            &nbsp; at &nbsp;
            {{format_dateTime date_created}}</p>
          <p class="right">{{format_comment_num comments.length}}</p>
        </div>
      </a>
    </div>
  </div>
</div>
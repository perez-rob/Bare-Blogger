<div class="row">
  <a href="/post/{{id}}">
    <div class="col s8">
      <h3>{{title}}</h3>
      <p>{{date_created}}</p>
    </div>
  </a>
  <div class="col s4">
    <div class="row">
      <button
        id="editBtn-{{id}}"
        data-postId="{{id}}"
        class="waves-effect waves-light btn deleteBtn"
      >Edit</button>

    </div>
    <div class="row">
      <button
        id="deleteBtn-{{id}}"
        data-postId="{{id}}"
        class="waves-effect waves-light btn deleteBtn"
      >Delete</button>
    </div>
  </div>

</div>